{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "./node_modules/**/*"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}